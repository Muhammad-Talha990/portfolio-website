# Server Configuration
PORT=5000
NODE_ENV=production

# Email Configuration (Required for contact form notifications)
# Option 1: Using Resend (Recommended - Easy setup, works great with Vercel)
# Sign up at https://resend.com and get your API key
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx
RECIPIENT_EMAIL=your-email@gmail.com

# Option 2: Using traditional SMTP (Alternative)
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
# EMAIL_SERVICE=gmail

# Email Service Options:
# - gmail: Use Gmail with App Password
# - outlook: Use Outlook/Hotmail
# - yahoo: Use Yahoo with App Password
# - custom: Use custom SMTP server

# For Gmail: Enable 2FA and generate App Password
# For Outlook: Use your regular password
# For Yahoo: Enable 2FA and generate App Password

# Optional: Custom SMTP (only if EMAIL_SERVICE=custom)
# EMAIL_HOST=smtp.your-provider.com
# EMAIL_PORT=587
# EMAIL_SECURE=false

# Database (if using Neon/PostgreSQL)
# DATABASE_URL=your_database_connection_string

# Session Secret (if using sessions)
# SESSION_SECRET=your_session_secret_here
